@model BankViewModel

@{
    ViewData["Title"] = "Delete";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

    <div class="container">
        <div class="card o-hidden border-0 shadow-lg my-5">
            <div class="card-body p-0">
                <!-- Nested Row within Card Body -->
                <div class="row">
                    <div class="col-lg-5 d-none d-lg-block bg-register-image"></div>
                    <div class="col-lg-7">
                        <div class="p-5">
                            <div class="text-center">
                                <h1 class="h4 text-gray-900 mb-4">Delete a bank account!</h1>
                            </div>
                            @using (@Html.BeginForm(
                               "Delete",
                               "Bank",
                               routeValues: new { Id = Model.BankId, BankViewModel = Model },
                               FormMethod.Post,
                               antiforgery: true,
                               new { @class = "user" }))
                            {
                                <div class="form-group row">
                                    @Html.DisplayFor(model => model.BankName, new { placeholder = "Bank Name", @class = "form-control form-control-user" })
                                </div>
                                <div class="form-group">
                                    @Html.DisplayFor(model => model.AccountNumber, new { placeholder = "Account Number", @class = "form-control form-control-user" })
                                </div>
                                <div class="form-group row">
                                    <div class="col-sm-6 mb-3 mb-sm-0">
                                        @Html.DisplayFor(model => model.LoginId, new { placeholder = "Login Id", @class = "form-control form-control-user" })
                                    </div>
                                    <div class="col-sm-6">
                                        @Html.DisplayFor(model => model.Password, new { placeholder = "Password", @class = "form-control form-control-user" })
                                    </div>
                                </div>
                                <div class="form-group">
                                    @Html.DisplayFor(model => model.Url, new { placeholder = "Bank website uri", @class = "form-control form-control-user" })
                                    @Html.HiddenFor(model => model.CreateDate)
                                </div>
                                <div class="form-group row">
                                    <div class="col-sm-6 mb-3 mb-sm-0">
                                        <input type="submit" value="Delete" id="btnDeleteBank" class="btn btn-primary btn-danger btn-user btn-block" />
                                    </div>
                                    <div class="col-sm-6">
                                        <input type="reset" value="Cancel" id="btnCancel" class="btn btn-secondary btn-user btn-block" />
                                    </div>
                                </div>
                            }
                            <hr>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

