@model BankViewModel

@{
    ViewData["Title"] = "Delete";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<!-- Page Header-->
<header class="page-header">
    <div class="container-fluid">
        <h2 class="no-margin-bottom">Bank</h2>
    </div>
</header>
<!-- Breadcrumb-->
<div class="breadcrumb-holder container-fluid">
    <ul class="breadcrumb">
        <li class="breadcrumb-item">@Html.ActionLink("Home", actionName: "Index", controllerName: "Home")</li>
        <li class="breadcrumb-item active">Bank</li>
    </ul>
</div>
<br />

<div class="container-fluid">
    <div class="row">
        <div class="col-lg-8">
            <div class="card">
                <div class="card-header d-flex align-items-center">
                    <h3 class="h4">Add a bank!</h3>
                </div>
                <div class="card-body">
                    @using (@Html.BeginForm(
                      "Delete",
                      "Bank",
                      routeValues: new { Id = Model.BankId, BankViewModel = Model },
                      FormMethod.Post,
                      antiforgery: true,
                      new { @class = "user" }))
                    {
                        @Html.AntiForgeryToken()
                        <div class="form-group row">
                            @Html.LabelFor(model => model.BankName, htmlAttributes: new { @class = "col-sm-3 form-control-label" })

                            <div class="col-sm-9">
                                @Html.TextBoxFor(model => model.BankName, htmlAttributes: new { @class = "form-control", disabled = "disabled" })
                            </div>
                        </div>
                        <div class="line"></div>
                        <div class="form-group row">
                            @Html.LabelFor(model => model.AccountNumber, htmlAttributes: new { @class = "col-sm-3 form-control-label" })

                            <div class="col-sm-9">
                                @Html.TextBoxFor(model => model.AccountNumber, htmlAttributes: new { @class = "form-control", disabled = "disabled" })
                            </div>
                        </div>
                        <div class="form-group row">
                            @Html.LabelFor(model => model.LoginId, htmlAttributes: new { @class = "col-sm-3 form-control-label" })

                            <div class="col-sm-9">
                                @Html.TextBoxFor(model => model.LoginId, htmlAttributes: new { @class = "form-control", disabled = "disabled" })
                            </div>
                        </div>
                        <div class="form-group row">
                            @Html.LabelFor(model => model.Password, htmlAttributes: new { @class = "col-sm-3 form-control-label" })

                            <div class="col-sm-9">
                                @Html.TextBoxFor(model => model.Password, htmlAttributes: new { @class = "form-control", disabled = "disabled" })
                            </div>
                        </div>
                        <div class="form-group row">
                            @Html.LabelFor(model => model.Url, htmlAttributes: new { @class = "col-sm-3 form-control-label" })

                            <div class="col-sm-9">
                                @Html.TextBoxFor(model => model.Url, htmlAttributes: new { @class = "form-control", disabled = "disabled" })
                            </div>
                        </div>

                        <div class="form-group row">
                            @Html.LabelFor(model => model.Notes, htmlAttributes: new { @class = "col-sm-3 form-control-label" })

                            <div class="col-sm-9">
                                @Html.TextAreaFor(model => model.Notes, htmlAttributes: new { @class = "form-control", disabled = "disabled" })
                            </div>
                        </div>
                        <div class="form-group row">
                            <div class="col-sm-6 mb-3 mb-sm-0">
                                <input type="submit" value="Delete" id="btnDeleteBank" class="btn btn-primary btn-danger btn-user btn-block" />
                            </div>
                            <div class="col-sm-6">
                                @Html.ActionLink("Cancel", "Index", "Bank", null, new {@class="btn btn-secondary btn-user btn-block"})
                                @*<input type="reset" value="Cancel" id="btnCancel" class="btn btn-secondary btn-user btn-block" />*@
                            </div>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</div>

