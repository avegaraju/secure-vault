@model IReadOnlyCollection<BankViewModel>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container-fluid">
    @foreach (var bank in Model)
    {
        <div class="row">
            <div class="col-l-4 col-md-8 mb-5">
                <div class="card border-left-primary shadow h-100 py-2">
                    <div class="card-body">
                        <div class="row no-gutters align-items-center">
                            <div class="col mr-2">
                                <div class="text-xs font-weight-bold text-primary text-uppercase mb-1">@bank.BankName</div>
                                <div class="h5 mb-0 font-weight-bold text-gray-800">@bank.AccountNumber</div>
                            </div>
                            <div class="col-auto">
                                @Html.ActionLink(
                                    linkText:string.Empty, 
                                    actionName: "Edit", 
                                    controllerName:"Bank", 
                                    routeValues:new {Id = bank.BankId}, 
                                    htmlAttributes:new {@class="fas fa-edit fa-2x text-gray-300"}
                                    )
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    }
</div>
