@model CardViewModel

@{
    ViewData["Title"] = "Create";
    Layout = "~/Views/Shared/_Content.cshtml";
}

<!-- Page Header-->
<header class="page-header">
    <div class="container-fluid">
        <h2 class="no-margin-bottom">Card</h2>
    </div>
</header>
<!-- Breadcrumb-->
<div class="breadcrumb-holder container-fluid">
    <ul class="breadcrumb">
        <li class="breadcrumb-item">@Html.ActionLink("Home", actionName: "Index", controllerName: "Home")</li>
        <li class="breadcrumb-item active">Card</li>
    </ul>
</div>
<br />

<div class="container-fluid">
    <div class="row">
        <div class="col-lg-12">
            <div class="card">
                <div class="card-header d-flex align-items-center">
                    <h3 class="h4">Add a bank card</h3>
                </div>
                <div class="card-body">
                    @using (@Html.BeginForm(
                      "Add",
                      "Card",
                      FormMethod.Post,
                      new { @class = "form-horizontal" }
                      ))
                    {
                        @Html.AntiForgeryToken()

                        <div class="form-group row">
                            @Html.LabelFor(model => model.BankNames, htmlAttributes: new { @class = "col-sm-3 form-control-label" })
                            <div class="col-sm-9">
                                @Html.DropDownListFor(model => model.BankId, Model.BankNames, "Banks", new { @class = "form-control mb-3" })
                                @Html.ValidationMessageFor(model => model.CardNumber, "", new { @class = "text-danger" })
                            </div>
                        </div>

                        <div class="form-group row">
                            @Html.LabelFor(model => model.CardTypes, htmlAttributes: new { @class = "col-sm-3 form-control-label" })
                            <div class="col-sm-9">
                                @Html.DropDownListFor(model => model.CardTypeId, Model.CardTypes, "Card type", new { @class = "form-control mb-3" })
                                @Html.ValidationMessageFor(model => model.CardTypes, "", new { @class = "text-danger" })
                            </div>
                        </div>

                        <div class="form-group row">
                            @Html.LabelFor(model => model.CardNumber, htmlAttributes: new { @class = "col-sm-3 form-control-label" })

                            <div class="col-sm-9">
                                @Html.TextBoxFor(model => model.CardNumber, htmlAttributes: new { @class = "form-control", placeholder = "Card Number" })
                                @Html.ValidationMessageFor(model => model.CardNumber, "", new { @class = "text-danger" })
                            </div>
                        </div>
                        <div class="line"></div>
                        <div class="form-group row">
                            @Html.LabelFor(model => model.Cvv, htmlAttributes: new { @class = "col-sm-3 form-control-label" })

                            <div class="col-sm-9">
                                @Html.TextBoxFor(model => model.Cvv, htmlAttributes: new { @class = "form-control", placeholder = "Cvv" })
                                @Html.ValidationMessageFor(model => model.Cvv, "", new { @class = "text-danger" })
                            </div>
                        </div>
                        <div class="row">

                            <div class="col-sm-9">
                                <div class="form-group-material">
                                    @Html.TextBoxFor(model => model.ExpiryMonth, htmlAttributes: new { @class = "input-material" })
                                    @Html.LabelFor(model => model.ExpiryMonth, htmlAttributes: new { @class = "label-material" })
                                    @Html.ValidationMessageFor(model => model.ExpiryMonth, "", new { @class = "text-danger" })
                                </div>
                                <div class="form-group-material">
                                    @Html.TextBoxFor(model => model.ExpiryYear, htmlAttributes: new { @class = "input-material" })
                                    @Html.LabelFor(model => model.ExpiryYear, htmlAttributes: new { @class = "label-material" })
                                    @Html.ValidationMessageFor(model => model.ExpiryYear, "", new { @class = "text-danger" })
                                </div>
                            </div>
                        </div>
                        <div class="form-group row">
                            @Html.LabelFor(model => model.Notes, htmlAttributes: new { @class = "col-sm-3 form-control-label" })

                            <div class="col-sm-9">
                                @Html.TextAreaFor(model => model.Notes, htmlAttributes: new { @class = "form-control", placeholder = "Notes" })
                            </div>
                        </div>
                        <div class="form-group row">
                            <div class="col-sm-6 mb-3 mb-sm-0">
                                <input type="submit" value="Add" id="btnAddCard" class="btn btn-primary btn-block" />
                            </div>
                            <div class="col-sm-6">
                                <input type="reset" value="Cancel" id="btnCancel" class="btn btn-secondary btn-block" />
                            </div>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</div>

