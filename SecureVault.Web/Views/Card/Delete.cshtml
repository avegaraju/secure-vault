@model CardViewModel

@{
    ViewData["Title"] = "Delete";
    Layout = "~/Views/Shared/_Content.cshtml";
}

<!-- Page Header-->
<header class="page-header">
    <div class="container-fluid">
        <h2 class="no-margin-bottom">Card</h2>
    </div>
</header>
<!-- Breadcrumb-->
<div class="breadcrumb-holder container-fluid">
    <ul class="breadcrumb">
        <li class="breadcrumb-item">@Html.ActionLink("Home", actionName: "Index", controllerName: "Home")</li>
        <li class="breadcrumb-item active">Card</li>
    </ul>
</div>
<br />

<div class="container-fluid">
    <div class="row">
        <div class="col-lg-12">
            <div class="card">
                <div class="card-header d-flex align-items-center">
                    <h3 class="h4">Delete a bank card</h3>
                </div>
                <div class="card-body">
                    @using (@Html.BeginForm(
                  "Delete",
                  "Card",
                     routeValues: new { Id = Model.CardId, CardViewModel = Model },
                  FormMethod.Post,
                     antiforgery: true,
                  new { @class = "form-horizontal" }
                  ))
                    {
                        @Html.AntiForgeryToken()

                        <div class="form-group row">
                            @Html.LabelFor(model => model.BankName, htmlAttributes: new { @class = "col-sm-3 form-control-label" })
                            <div class="col-sm-9">
                                @Html.TextBoxFor(model => model.BankName, new { @class = "form-control", disabled = "disabled" })
                            </div>
                        </div>
                        <div class="form-group row">
                            @Html.LabelFor(model => model.CardTypes, htmlAttributes: new { @class = "col-sm-3 form-control-label" })
                            <div class="col-sm-9">
                                @Html.DropDownListFor(model => model.CardTypeId, Model.CardTypes, "Card type", new { @class = "form-control mb-3", disabled = "disabled" })
                            </div>
                        </div>

                        <div class="form-group row">
                            @Html.LabelFor(model => model.CardNumber, htmlAttributes: new { @class = "col-sm-3 form-control-label" })

                            <div class="col-sm-9">
                                @Html.TextBoxFor(model => model.CardNumber, htmlAttributes: new { @class = "form-control", disabled = "disabled" })
                            </div>
                        </div>
                        <div class="line"></div>
                        <div class="form-group row">
                            @Html.LabelFor(model => model.Cvv, htmlAttributes: new { @class = "col-sm-3 form-control-label" })

                            <div class="col-sm-9">
                                @Html.TextBoxFor(model => model.Cvv, htmlAttributes: new { @class = "form-control", disabled = "disabled" })
                            </div>
                        </div>

                        <div class="form-group row">
                            @Html.LabelFor(model => model.ExpiryMonth, htmlAttributes: new { @class = "col-sm-3 form-control-label" })

                            <div class="col-sm-9">
                                @Html.TextBoxFor(model => model.ExpiryMonth, htmlAttributes: new { @class = "form-control", disabled = "disabled" })
                            </div>
                        </div>

                        <div class="form-group row">
                            @Html.LabelFor(model => model.ExpiryYear, htmlAttributes: new { @class = "col-sm-3 form-control-label" })

                            <div class="col-sm-9">
                                @Html.TextBoxFor(model => model.ExpiryYear, htmlAttributes: new { @class = "form-control", disabled = "disabled" })
                            </div>
                        </div>
                        <div class="form-group row">
                            @Html.LabelFor(model => model.Notes, htmlAttributes: new { @class = "col-sm-3 form-control-label" })

                            <div class="col-sm-9">
                                @Html.TextAreaFor(model => model.Notes, htmlAttributes: new { @class = "form-control", disabled="disabled" })
                            </div>
                        </div>
                        <div class="form-group row">
                            <div class="col-sm-6 mb-3 mb-sm-0">
                                <input type="submit" value="Delete" id="btnDeleteCard" class="btn btn-primary btn-danger btn-user btn-block" />
                            </div>
                            <div class="col-sm-6">
                                @Html.ActionLink("Cancel", "Index", "Card", null ,new {@class="btn btn-secondary btn-block"})
                            </div>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</div>

